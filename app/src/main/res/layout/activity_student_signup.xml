<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSignupActivity"
    android:background="@mipmap/login_module">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign-up"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="40dp">

    </TextView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="424dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="246dp"
        android:background="@mipmap/bigrect_grey"></View>


    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="94dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="158dp"
        android:src="@mipmap/icon4" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="161dp"
        android:backgroundTint="#FFF"
        android:src="@drawable/add3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="305dp"
        android:text="Username"
        android:textColor="#000">

    </TextView>

    <EditText
        android:id="@+id/std_signup_displayName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="47dp"
        android:background="@mipmap/rec_grey"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#010414"
        android:textColorHint="#696969">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="366dp"
        android:text="Email-ID"
        android:textColor="#000">

    </TextView>

    <EditText
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:inputType="textEmailAddress"
        android:textColor="#010414"
        android:textColorHint="#696969"
        android:background="@mipmap/rec_grey"
        android:paddingLeft="10dp"
        android:layout_below="@+id/std_signup_displayName"
        android:hint="Email Address"
        android:id="@+id/std_signup_email">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="428dp"
        android:text="Password"
        android:textColor="#000">

    </TextView>

    <EditText
        android:layout_width="320dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/std_signup_email"
        android:layout_marginHorizontal="10dp"
        android:textColor="#010414"
        android:textColorHint="#696969"
        android:background="@mipmap/rec_grey"
        android:paddingLeft="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/std_signup_password">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="491dp"
        android:text="Confirm Password"
        android:textColor="#000">

    </TextView>

    <EditText
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/std_signup_password"
        android:layout_marginHorizontal="10dp"
        android:textColor="#010414"
        android:textColorHint="#696969"
        android:background="@mipmap/rec_grey"
        android:paddingLeft="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:id="@+id/std_signup_confirmPassword">

    </EditText>


    <Button
        android:id="@+id/signup_alreadyUser_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="117dp"
        android:layout_height="31dp"
        android:layout_below="@+id/std_signup_confirmPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:background="@null"
        android:text="Already a user."
        android:textAllCaps="false"
        android:textColor="#0000ff"
        android:textSize="17sp" />


    <Button
        android:id="@+id/std_signup_btn"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_below="@+id/std_signup_confirmPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/rec_black"
        android:text="Signup"
        android:textColor="#FFF">

    </Button>

</RelativeLayout>